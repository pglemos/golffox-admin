{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM"],
    "module": "ES2022",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "google.maps"],
    "typeRoots": ["../../node_modules/@types", "../../src/types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["../../*"]
    }
  },
  "include": ["src"]
}

